<h1>会員情報編集</h1>
<%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
<!--モデルのurl、メソッドを指定してほしいアクションを呼び出す-->
  <label for="name">氏名</label>
  <%= f.text_field :last_name, autofocus: true %>
  <%= f.text_field :first_name, autofocus: true %>

  <label for="name_kana">カナ</label>
  <%= f.text_field :last_name_kana, autofocus: true %>
  <%= f.text_field :first_name_kana, autofocus: true %>

  <label for="postal_code">郵便番号</label>
  <%= f.text_field :postal_code, autofocus: true %>

  <label for="address">住所</label>
  <%= f.text_field :address, autofocus: true %>

  <label for="telephone_number">電話番号</label>
  <%= f.text_field :telephone_number, autofocus: true %>

  <label for="email">メールアドレス</label>
  <%= f.text_field :email, autofocus: true %>

  <br>
  <%= f.submit "変更内容を保存" %><!--form_withで指定したアクション--><br>
  退会する
<% end %>