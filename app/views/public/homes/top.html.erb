<h1>新着商品</h1>
<% @items.each do |item| %>
  <div>
    <%= link_to item_path(item.id) do %>
      <%= image_tag item.get_image(150,150) %>
    <% end %>
    <p><%= item.name %></p>
    <p>¥<%= item.add_tax_price.to_s(:dalimited) %></p>
  </div>
<% end %>

<%= link_to "全ての商品を見る＞", items_path %>