<h1>注文履歴一覧</h1>
<div>
  <table>
    <thead>
      <tr>
        <th>購入日時</th>
        <th> 購入者</th>
        <th>注文個数</th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td>
          <%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'),admin_order_path(order.id) %>
        </td>
        <td><%= order.customer.last_name + order.customer.first_name %></td>
        <td><%= order.order_items.sum(:amount) %> <!--sum(:amount)メソッド(amount)の合計--></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @orders %>
</div>