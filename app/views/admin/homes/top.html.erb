<div class="mx-auto" style="max-width:900px;">

  <h4 class="d-flex text-light mb-3 ml-5">
    <span style="background-color:#adb5bd">　注文履歴一覧　</span>
  </h4>

  <table class="table">
      <thead class="bg-secondary">
        <tr class="text-light">
          <th>購入日時</th>
          <th> 購入者</th>
          <th>注文個数</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'),admin_order_path(order.id) %>
          </td>
          <td><%= order.customer.last_name + order.customer.first_name %></td>
          <td><%= order.order_items.sum(:amount) %> <!--sum(:amount)メソッド(amount)の合計--></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <div class="pagination justify-content-center">
      <%= paginate @orders %>
    </div>
</div>