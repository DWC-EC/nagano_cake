<div class="mx-auto" style="max-width:900px;">

  <h4 class="d-flex text-light mb-3 ml-5">
    <span style="background-color:#adb5bd">　会員一覧　</span>
  </h4>

  <table class="table">
    <thead class="bg-secondary">
      <tr class="text-light">
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @customer.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td>
          <%= link_to (customer.last_name + customer.first_name),admin_customer_path(customer.id) %>
        </td>
        <td><%= customer.email %></td>
        <td>
          <% if customer.is_deleted %>
            <div class="text-secondary">退会済み</div>
          <% else %>
            <div class="text-success">有効</div>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <div class="pagination justify-content-center">
    <%= paginate(@customer) %>
  </div>

</div>