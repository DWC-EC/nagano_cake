<div class="mx-auto" style="max-width:900px;">

  <h4 class="d-flex text-light mb-4 mt-5 ml-5">
    <span style="background-color:#adb5bd">　<%= (@customer.last_name + @customer.first_name) %>さんの会員詳細　</span>
  </h4>

  <div class="pl-5">
    <div class="row mb-3">
      <div class="col-sm-2">会員ID</div>
      <div class="col-sm-6"><%= @customer.id %></div>
    </div>

    <div class="row mb-3">
      <div class="col-sm-2">氏名</div>
      <div class="col-sm-6"><%= (@customer.last_name + @customer.first_name) %></div>
    </div>

    <div class="row mb-3">
      <div class="col-sm-2">フリガナ</div>
      <div class="col-sm-6"><%= (@customer.last_name_kana + @customer.first_name_kana) %></div>
    </div>

    <div class="row mb-3">
      <div class="col-sm-2">郵便番号</div>
      <div class="col-sm-6"><%= @customer.postal_code %></div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-2">住所</div>
        <div class="col-sm-6"><%= @customer.address %></div>
    </div>

    <div class="row mb-3">
      <div class="col-sm-2">電話番号</div>
      <div class="col-sm-6"><%= @customer.telephone_number %></div>
    </div>

    <div class="row mb-3">
      <div class="col-sm-2">メールアドレス</div>
      <div class="col-sm-6"><%= @customer.email %></div>
    </div>

    <div class="row mb-3">
      <div class="col-sm-2">会員ステータス</div>
      <div class="col-sm-6">
       <% if @customer.is_deleted %>
         <div class="text-secondary">退会済み</div>
       <% else %>
         <div class="text-success">有効</div>
       <% end %>
     </div>
  </div>

  <div class="row mb-3">
     <div class="col-sm-2"></div>
     <div class="col-sm-6">
       <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success mr-5" %>
       <%= link_to "注文一覧を見る", admin_path, class: "btn btn-info" %>
      </div>
  </div>

</div>