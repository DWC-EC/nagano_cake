<div><%= flash.now[:notice] %></div>
<h1>商品編集</h1>

<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
    <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<%= form_with model: @item, url: admin_item_path(@item.id) do |f| %>
  商品画像<%= f.file_field :image, accept: "image/*" %><br>

  商品名<%= f.text_field :name, autofocus: true %><br>

  商品説明<%= f.text_area :introduction, autofocus: true %><br>

  税抜価格<%= f.text_field :price, autofocus: true %>円<br>

  <div><%= f.submit '変更を保存' %></div>
<% end %>
